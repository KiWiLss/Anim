<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_attribute_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/red9901"
            />

        <LinearLayout
            android:id="@+id/ll_attribute_layoutanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_animator">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alpha"
                android:onClick="alpha"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotate"
                android:onClick="rotate"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="translate"
                android:onClick="translate"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scale"
                android:onClick="scale"
                />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="集合"
            android:onClick="set"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xml测试"
            android:onClick="xmlset"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="propertyValuesHolder测试"
            android:onClick="propertyVaules"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valueanimator测试"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valueanimator"
            android:onClick="valueanimator"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="控件自身实现动画效果"
            android:onClick="animator"
            />
    </LinearLayout>
</ScrollView>